<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_star_main_iv"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:src="@drawable/nophoto"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_star_date_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_box"
        app:layout_constraintWidth_percent="1"/>

    <ImageView
        android:id="@+id/item_star_star_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_fill_star"
        app:layout_constraintBottom_toBottomOf="@id/item_star_main_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    
    <TextView
        android:id="@+id/item_star_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="yyyy년 mm월 mm일"
        android:textSize="12sp"
        android:gravity="center"
        android:fontFamily="@font/font_kopupworld_medium"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@id/item_star_main_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>